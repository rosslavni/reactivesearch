{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "airbnb",
	"parser": "babel-eslint",
	"rules": {
		"indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
		"no-tabs": 0,
		"no-underscore-dangle": 0,
		
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"react/no-danger": 0,
		"react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
	}
}
